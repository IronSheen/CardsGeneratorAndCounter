
public class main {
	public static void main(String[] args){
		
		//Fortæller hvor mange kort der er i et kortdæk
		int[] deck = new int[52]; //Der er 52 kort i et kortdæk uden jokere
		String[] type = {"Hjerter", "Spar", "Ruder", "Kløver"}; //Indensholder de forksllige typer kort
		String[] tal = {"A", "2", "3", "4", "5", "6", "7", "8", "9", "Knægt", "Dronning", "Konge"}; //Indeholder de forskellige slags tal
		
		//Tjekker de givende kort
		for (int i = 0; i < deck.length; i++){	
			deck[i] += i;
		}
		
		//Blander de forskellige kort
		for (int i = 0; i < deck.length; i++){
			int tag = (int)(Math.random() * deck.length); //Vælger et tilfældig sted i bunken af kort
			int x = deck[i]; //Laver en midlertideligt varriabel som holder vores kort
			deck[i] = deck[tag]; //Sætter det valgte kort, et tilfældig sted
			deck[tag] = x; //Sætter (tilfældig sted) i en midlertidelig værdi
		}
		
		for (int i = 0; i < 4; i++){
			String type = typer[deck[i] / 13]; 
			String tal = tallene[deck[i] % 13];
			System.out.println("Du har fået " + type + " af " + tal);
		}
	}
}
